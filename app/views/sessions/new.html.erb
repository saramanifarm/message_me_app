
<h2 class="ui center aligned medium icon header">
   <div class="custom-class"> <h1>Welcome to MessageMe - a complete chat app</h1></div>
  <i class="circular custom-class orange power off icon"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="">
      <%= form_with(scope: :session, url: login_path, class: "ui form", local: true)  do |f| %>
        <div class="field">
            <%= f.label :username %>
          <div class="ui left icon input">
             <%= f.text_field :username, placeholder: "username" %>
             <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
                <%= f.password_field :password, placeholder: "password" %>
                <i class="lock icon"></i>
            </div>
        </div>
        <%= f.submit  "Login", class: "ui orange submit button" %>
        <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>